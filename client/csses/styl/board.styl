charts.gridster li {
  list-style: none;
}

charts.gridster li .board {
  position: relative;
  width: 100%;
  height: 100%;
  overflow: hidden;
  z-index: 1;
  display: flex;
  flex-flow: column;
}

charts.gridster li .board .caption {
  flex: 0 1 28px;
  text-align: center;
  line-height: 28px;
  font-size: 18px;
  color: #999
  background-color:#1E1E1F;
}

charts.gridster li .board .chart { //svg container
  flex: 1 1 auto;
  display: flex; //legend or control panel may be inserted on the right of chart area
  position: relative;
  background-color: #272b30;
  z-index: 2;
}

charts.gridster li .board .chart > svg { //svg 
  display: inline-block;
  position: absolute;
  z-index: 3;
}

charts.gridster li .board .chart > .rotate{
  transform-origin: top left;
  transform: rotate(-90deg) translatex(-100%);
}

charts.gridster li .board .chart svg text {  
  fill:#c8c8c8;
}

charts.gridster li .board .chart-buttons.left {
   left: 0px;
}
charts.gridster li .board .chart-buttons.right {
   right: 0px;
}

charts.gridster li .board .chart-buttons {
   position: absolute;
   background-color: Transparent;
   z-index: 5;
   text-align: center;
   top: 0px;
   padding: 0px 8px 0px 1px; 
}

charts.gridster li .board .chart-buttons > button {
   background-color: Transparent;
   background-repeat:no-repeat;
   border: none;
   cursor:pointer;
   overflow: hidden;
   outline:none;
   padding-left : 3px;
   color  #008080;
   display: none;
}

charts.gridster li .board .chart-buttons button:not([disabled]) > i:hover {
   cursor pointer
   color Chocolate
}

charts.gridster li .board .chart-buttons button:disabled {
    color: #888
}

charts.gridster li .board .loading {
    width:100%;
    height:100%; 
    position:absolute;
    z-index:9999;
    background:url("/imgs/loading.gif") no-repeat center center rgba(0,0,0,0.25)
    //display:none;
}

charts.gridster li .board .dropdown-content {
    display: none;
    position: absolute;
    overflow: auto;
    box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
    z-index: 1;
}

charts.gridster li .board .dropdown-content > .fa {
    padding: 1px 1px;
    text-decoration: none;
    display: block;
}

charts.gridster li .board .dropdown-content > .fa:hover {
   cursor pointer
   color Chocolate
}
