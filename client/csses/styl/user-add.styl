
.button-add-user {
  border-radius: 0px;
  margin-left: 10px;
  margin-top: 17px;
}

.user-add-dialog, .user-add-dialog table {
  background-color: #999999;
  color: black;
}

.user-add-dialog td:first-child {
  width: 100px;
}

.user-add-dialog .user-add-idandpass {
  border: 1px solid white;
  border-radius: 10px;
  width: 100%;
  height: 100%;
  padding: 20px;
}

.user-add-dialog .user-add-idandpass span {
  width: 100px;
  display: inline-block;
}

.user-add-dialog .btn {
  width: 100px;
  border: none;
}

.user-add-dialog .btn-container {
  text-align: center;
  margin: 10px;
}