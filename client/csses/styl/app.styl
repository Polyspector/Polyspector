@import "nib"
@charset"utf-8"
 
body{
   margin: 0;         /* 余白の削除 */
   padding: 0;        /* 余白の削除 */
   width:100%;
   height:100%;
}

header {
  position fixed
  top 0
  left 0
  width 100%
  height 29px
  background #333
}

section {
  position absolute
  display flex
  top 0
  right 0
  bottom 0
  left 0
  margin-top 29px
  margin-bottom 19px
  background #333 
}

footer {
  position fixed
  bottom 0
  left 0
  height 19px
  width 100%
  background #333
  text-align center
}
